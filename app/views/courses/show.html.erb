<div class="container">
  <div class="col-lg-6 col-12">
      <%= link_to "Volver", courses_path, class: "custom-btn custom-border-btn btn custom-link mt-3 me-3" %>
      <% if user_signed_in?  %>
      <% if current_user.is_admin? %>
      <%= link_to "Editar Curso", edit_course_path, class: 'custom-btn btn custom-link mt-3' %>
      <%= link_to "Eliminar Curso",
        course_path(@course),
        data: {method: :delete, confirm: "Estas Seguro?"},class: 'custom-btn btn custom-link mt-3'
      %>


    <div class="container m-3">
      <% rooms = Room.where(course_id: params[:id]) %>
      <h3>Curso: <%= @course.name %> </h3>
      <h4 class="" >Inscriptos a este curso: <%= rooms.length %></h4>
            <ol>
            <% rooms.each do |room| %>
              <li class="mt-3" >  Nombre: <%= room.student.first_name %> <%= room.student.last_name  %> | Pago: <%= room.is_paid == true ? "Si 🟩" : "No 🟥 " %>   | Dia curso: <%= room.course_date %> | <%= link_to "Ver Estudiante", student_path(room.student.id)%></li>
            <% end %>
            </ol>
    </div>




        <% else %>
      <% end %>
    <% end %>
  </div>
</div>

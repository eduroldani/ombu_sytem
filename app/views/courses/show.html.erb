
<section class="hero hero-customized" id="section_1"
style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @course.photo.key, height: 800, crop: :fill %>'); background-repeat: no-repeat;  background-attachment: scroll; background-position: bottom center;background-size: cover;">



    <div class="container">
        <div class="row">

            <div class="col-lg-5 col-12 m-auto">
                <div class="hero-text px-5 py-4 shadow-lg" style="background-color: rgba(0,64,110,0.8)
;">

                    <h2 class="text-white mb-4"><u class="text-info"><%=@course.name.capitalize%></u> </h2>

                    <div class="d-flex justify-content-center align-items-center">
                     <% if @course.is_confirm == false %>
                        <span class="date-text">Fecha a confirmar</span>
                        <span class="location-text">Mantenete enterado aqui</span>
                        <% else %>
                        <span class="date-text"><%= @course.date > Date.today ? " Proximamente " : " Expirado " %></span>
                        <span class="location-text"><%= @course.date.strftime('%d-%m-%Y') %></span>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<div class="">
<%= form_with url: courses_path, method: :get, class: "d-flex m-3 col-lg-6 col-12 " do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a movie", style: "border-radius: 2em"
  %>
  <%= submit_tag "Search", class: "custom-btn custom-border-btn btn custom-link ml-3" %>
<% end %>
</div>

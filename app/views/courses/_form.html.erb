<%= simple_form_for @course do |f| %>
  <%= f.input :name, label: 'Nombre del Curso'%>
  <%= f.input :short_description, placeholder: 'descipcion corta max 100 caracteres',label: 'Descripcion Corta:' %>
  <%= f.input :long_description, placeholder: 'descipcion larga', label: 'Descripcion Larga:' %>
  <%= f.input :date, label: 'Fecha del curso:' %>
  <%= f.input :what, placeholder: 'Que van a aprender?', label: 'Que van a aprender?'%>
  <%= f.input :how, placeholder: 'Como van a aprender?', label: 'Como van a aprender?'%>
  <%= f.input :project, placeholder: 'Cual es el proyecto final?', label: 'Que Projecto Final?'%>
  <%= f.input :capacity,placeholder: 'Cual es el cupo del curso?', label: 'Capacidad:'%>
  <%= f.input :price, placeholder: 'Cual es el precio?' , label: 'Precio:'%>
  <%= f.input :minimun_age, placeholder: 'Edad Minima?' , label: 'Edad Minima:'%>
  <%= f.input :max_age, placeholder: 'Edad maxima?', label: 'Edad Maxima:' %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit,  "Crear Curso", class: "btn btn-primary" %>
<% end %>

        <div class="notification-content">
              <h5><strong><%= student.first_name %> <%= student.last_name %></strong> - Cursos Anotados: <%= student.rooms.length %> Pagados: <%= paid_courses %> </h5>
              <p><small><%= paid_courses >= 1 ? "ðŸŸ© Cliente " : "ðŸŸ¥ Prospecto" %> - Ultimo contacto:  <%= student.last_contact == nil  ? "Registrar fecha" : student.last_contact.strftime('%d-%m-%Y')  %> - Â¿Cancelo? <%= student.is_cancelled == true ? "SI" : "NO" %></small></p>
              <p>Telefono: <%=student.contact_phone%></p>
              <p>Responsable: <%= student.full_name_contact %>
        </div>

        <div class="notification-actions">
          <%= link_to "Ver Mas", student_path(student),class: "far fa-eye-alt" %>
          <%= link_to "Editar", edit_student_path(student) ,class: "far fa-eye-alt" %>
          <%= link_to "Eliminar",
            student_path(student),
            data: {method: :delete, confirm: "Estas Seguro?"},class: 'far fa-trash-alt'
          %>
        </div>
      </div>
    <% end %>



        <% else %>

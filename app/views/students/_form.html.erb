<%= simple_form_for @student do |f| %>
  <%= f.input :first_name, label: 'Nombre Estudiante'%>
  <%= f.input :last_name, label: 'Apellido Estudiante'%>
  <%= f.input :full_name_contact, label: 'Nombre Completo de Persona responsable'%>
  <%= f.input :contact_email, label: 'Email Contacto'%>
  <%= f.input :contact_phone, label: 'Telefono de Contacto'%>
  <%= f.input :date_of_birth, label: 'Fecha de Nacimiento', start_year: 1993%>
  <%= f.input :school, label: 'Colegio'%>
  <%= f.input :is_converted, label: 'Pago?'%>
  <%= f.input :channel, label: 'Canal?', collection: ["Instagram", "Facebook","Whatsapp","Web","Referido","Otro"]%>
  <%= f.input :allow_social, label: 'Autorizado para redes: '%>
  <%= f.input :last_contact, label: 'Ultimo contacto'%>
  <%= f.input :is_cancelled, label: 'No Llamar mas'%>
  <%= f.button :submit , "Crear Estudiante", label: 'Enviar', class: "btn btn-primary" %>
<% end %>
